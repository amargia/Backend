html
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="./style.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css")
    title=PUG
  body
    table
      thead
        tr
          th(scope="col") Producto
          th(scope="col") Precio
          th(scope="col") Imagen
      tbody
      if data.length === 0
        tr
          td(colspan="3") No hay datos
      else
        each datos in data
          tr
            td= datos.title
            td= datos.price
            td
              img(src=datos.thumbnail class="productImage")
  style. 
        body {
          background-color: #2b023b;
        }
        form, h1, table { 
          margin: 0 auto;
          width: 50%;
        }
        label, h1, th, td {
          color: white;
        }
        .btn {
          background-color: #e9b0ff;
          color: #2b023b;
          border-color: #2b023b;
        }
        .btn:hover {
          background-color: #2b023b;
          color: #e9b0ff;
          border-color: #e9b0ff;
        }