<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <title>Document</title>
    </head>
    <body>
        <span></span>
        <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
        <script>
        const productos = Handlebars.compile(`<form action="/">
                                                <div class="form-group">
                                                    <label for="title" class="text">Producto</label>
                                                    <input type="text" class="form-control" id="title" name="title" placeholder="Ingrese Producto">
                                                </div>
                                                <div class="form-group">
                                                    <label for="price" class="text">Precio</label>
                                                    <input type="number" class="form-control" id="price" name="price" placeholder="Ingrese Precio">
                                                </div>
                                                <div class="form-group">
                                                    <label for="thumbnail" class="text">Imagen Producto</label>
                                                    <input type="file" class="form-control" id="thumbnail" name="thumbnail">
                                                </div>
                                                <button type="submit" class="btn btn-primary">Enviar</button>
                                            </form>`);

        const html = productos({
            title: "Calculadora",
            price: 55.90,
            thumbnail: "https://cdn3.iconfinder.com/data/icons/education-209/64/calculator-math-tool-school-256.png",
        });
        document.querySelector("span").innerHTML = html;
        </script>
    </body>
    <style>
    form {
        margin: 0 auto;
        width: 50%;
    }
    body {
        background-color: #2b023b;
    }
    .text {
        color: white;
    }
    .btn {
        background-color: #e9b0ff;
        color: #2b023b;
        border-color: #2b023b;
    }
    .btn:hover {
        background-color: #2b023b;
        color: #e9b0ff;
        border-color: #e9b0ff;
    }
    </style>
</html>